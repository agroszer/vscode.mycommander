{
  "name": "mycommander",
  "displayName": "mycommander",
  "description": "single panel file manager",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:myCommander.fileExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "my-commander-container",
          "title": "My Commander",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "my-commander-container": [
        {
          "id": "myCommander.fileExplorer",
          "name": "File Explorer",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "My Commander Configuration",
      "properties": {
        "myCommander.showFileSize": {
          "type": "boolean",
          "default": false,
          "description": "Whether to show file sizes in the file explorer."
        },
        "myCommander.searchCaseSensitive": {
          "type": "boolean",
          "default": false,
          "description": "Whether the search in the file explorer is case sensitive."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
