{
  "name": "mycommander",
  "displayName": "mycommander",
  "description": "single panel file manager",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:myCommander.fileExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "my-commander-container",
          "title": "My Commander",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "my-commander-container": [
        {
          "id": "myCommander.fileExplorer",
          "name": "File Explorer",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "myCommander.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "myCommander.openSettings",
        "title": "Open Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "myCommander.revealInExplorer",
        "title": "Reveal in Explorer",
        "icon": "$(arrow-left)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "myCommander.refresh",
          "when": "view == myCommander.fileExplorer",
          "group": "navigation"
        },
        {
          "command": "myCommander.openSettings",
          "when": "view == myCommander.fileExplorer",
          "group": "navigation"
        },
        {
          "command": "myCommander.revealInExplorer",
          "when": "view == myCommander.fileExplorer",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "My Commander Configuration",
      "properties": {
        "myCommander.showFileSize": {
          "type": "boolean",
          "default": false,
          "description": "Whether to show file sizes in the file explorer on the right."
        },
        "myCommander.searchCaseSensitive": {
          "type": "boolean",
          "default": false,
          "description": "Whether the search in the file explorer is case sensitive."
        },
        "myCommander.searchMode": {
          "type": "string",
          "default": "filter",
          "enum": [
            "filter",
            "search"
          ],
          "description": "The search mode. \"filter\" will only show matching items. \"search\" will show all items and select the first match."
        },
        "myCommander.searchMatch": {
          "type": "string",
          "default": "startsWith",
          "enum": [
            "startsWith",
            "in"
          ],
          "description": "The search match mode. \"startsWith\" will match the beginning of the item name. \"in\" will match anywhere in the item name."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "publish": "./publish.sh"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "vsce": "^2.11.0"
  }
}
